block config
  include ../config/variables
<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description" content=descripcion)
    link(rel="stylesheet", href="./css/styles2.css")
    link(rel="stylesheet", href="./css/styles.css")
    title #{titulo} | #{sitio}
  body
    header.ed-container
      .ed-item.web-20
        include ../blocks/logo
      .ed-item.web-80
        nav
          include ../blocks/menu
    #banner.ed-container
      .ed-item
        include ../blocks/banner
    .ed-container
      main.ed-item.web-75
        block main
      aside.ed-item.web-25
        block aside
    footer
      ul
        li Nosotros
      .ed-container
        .ed-item
          include ../blocks/footer